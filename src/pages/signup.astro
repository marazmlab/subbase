---
import { AuthCard } from "@/components/auth/AuthCard";
import Layout from "@/layouts/Layout.astro";

// Middleware handles authentication and redirects automatically:
// - Authenticated users are redirected to / (dashboard)
// - Unauthenticated users can access this page
---

<Layout title="Rejestracja - Subbase">
  <main class="flex min-h-screen items-center justify-center px-4 py-6 sm:px-6 lg:px-8">
    <AuthCard client:load initialTab="register" />
  </main>
</Layout>
